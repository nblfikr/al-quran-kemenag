[
    {
        "ayat": 1,
        "lafal": "\u0627\u064e\u0631\u064e\u0621\u064e\u064a\u0652\u062a\u064e \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652 \u064a\u064f\u0643\u064e\u0630\u0651\u0650\u0628\u064f \u0628\u0650\u0627\u0644\u062f\u0651\u0650\u064a\u0652\u0646\u0650\u06d7",
        "terjemah": "Tahukah kamu (orang) yang mendustakan agama?"
    },
    {
        "ayat": 2,
        "lafal": "\u0641\u064e\u0630\u0670\u0644\u0650\u0643\u064e \u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652 \u064a\u064e\u062f\u064f\u0639\u0651\u064f \u0627\u0644\u0652\u064a\u064e\u062a\u0650\u064a\u0652\u0645\u064e\u06d9",
        "terjemah": "Maka itulah orang yang menghardik anak yatim,"
    },
    {
        "ayat": 3,
        "lafal": "\u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u062d\u064f\u0636\u0651\u064f \u0639\u064e\u0644\u0670\u0649 \u0637\u064e\u0639\u064e\u0627\u0645\u0650 \u0627\u0644\u0652\u0645\u0650\u0633\u0652\u0643\u0650\u064a\u0652\u0646\u0650\u06d7",
        "terjemah": "dan tidak mendorong memberi makan orang miskin."
    },
    {
        "ayat": 4,
        "lafal": "\u0641\u064e\u0648\u064e\u064a\u0652\u0644\u064c \u0644\u0650\u0651\u0644\u0652\u0645\u064f\u0635\u064e\u0644\u0651\u0650\u064a\u0652\u0646\u064e\u06d9",
        "terjemah": "Maka celakalah orang yang salat,"
    },
    {
        "ayat": 5,
        "lafal": "\u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0647\u064f\u0645\u0652 \u0639\u064e\u0646\u0652 \u0635\u064e\u0644\u064e\u0627\u062a\u0650\u0647\u0650\u0645\u0652 \u0633\u064e\u0627\u0647\u064f\u0648\u0652\u0646\u064e\u06d9",
        "terjemah": "(yaitu) orang-orang yang lalai terhadap salatnya,"
    },
    {
        "ayat": 6,
        "lafal": "\u0627\u0644\u0651\u064e\u0630\u0650\u064a\u0652\u0646\u064e \u0647\u064f\u0645\u0652 \u064a\u064f\u0631\u064e\u0627\u06e4\u0621\u064f\u0648\u0652\u0646\u064e\u06d9",
        "terjemah": "yang berbuat ria,"
    },
    {
        "ayat": 7,
        "lafal": "\u0648\u064e\u064a\u064e\u0645\u0652\u0646\u064e\u0639\u064f\u0648\u0652\u0646\u064e \u0627\u0644\u0652\u0645\u064e\u0627\u0639\u064f\u0648\u0652\u0646\u064e \u08d6",
        "terjemah": "dan enggan (memberikan) bantuan."
    }
]