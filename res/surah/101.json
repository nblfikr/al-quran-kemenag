[
    {
        "ayat": 1,
        "lafal": "\u0627\u064e\u0644\u0652\u0642\u064e\u0627\u0631\u0650\u0639\u064e\u0629\u064f\u06d9",
        "terjemah": "Hari Kiamat,"
    },
    {
        "ayat": 2,
        "lafal": "\u0645\u064e\u0627 \u0627\u0644\u0652\u0642\u064e\u0627\u0631\u0650\u0639\u064e\u0629\u064f \u06da",
        "terjemah": "Apakah hari Kiamat itu?"
    },
    {
        "ayat": 3,
        "lafal": "\u0648\u064e\u0645\u064e\u0627\u0653 \u0627\u064e\u062f\u0652\u0631\u0670\u0649\u0643\u064e \u0645\u064e\u0627 \u0627\u0644\u0652\u0642\u064e\u0627\u0631\u0650\u0639\u064e\u0629\u064f \u06d7",
        "terjemah": "Dan tahukah kamu apakah hari Kiamat itu?"
    },
    {
        "ayat": 4,
        "lafal": "\u064a\u064e\u0648\u0652\u0645\u064e \u064a\u064e\u0643\u064f\u0648\u0652\u0646\u064f \u0627\u0644\u0646\u0651\u064e\u0627\u0633\u064f \u0643\u064e\u0627\u0644\u0652\u0641\u064e\u0631\u064e\u0627\u0634\u0650 \u0627\u0644\u0652\u0645\u064e\u0628\u0652\u062b\u064f\u0648\u0652\u062b\u0650\u06d9",
        "terjemah": "Pada hari itu manusia seperti laron yang beterbangan,"
    },
    {
        "ayat": 5,
        "lafal": "\u0648\u064e\u062a\u064e\u0643\u064f\u0648\u0652\u0646\u064f \u0627\u0644\u0652\u062c\u0650\u0628\u064e\u0627\u0644\u064f \u0643\u064e\u0627\u0644\u0652\u0639\u0650\u0647\u0652\u0646\u0650 \u0627\u0644\u0652\u0645\u064e\u0646\u0652\u0641\u064f\u0648\u0652\u0634\u0650\u06d7",
        "terjemah": "dan gunung-gunung seperti bulu yang dihambur-hamburkan."
    },
    {
        "ayat": 6,
        "lafal": "\u0641\u064e\u0627\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u0652 \u062b\u064e\u0642\u064f\u0644\u064e\u062a\u0652 \u0645\u064e\u0648\u064e\u0627\u0632\u0650\u064a\u0646\u064f\u0647\u0657\u06d9",
        "terjemah": "Maka adapun orang yang berat timbangan (kebaikan)nya,"
    },
    {
        "ayat": 7,
        "lafal": "\u0641\u064e\u0647\u064f\u0648\u064e \u0641\u0650\u064a\u0652 \u0639\u0650\u064a\u0652\u0634\u064e\u0629\u064d \u0631\u0651\u064e\u0627\u0636\u0650\u064a\u064e\u0629\u064d\u06d7",
        "terjemah": "maka dia berada dalam kehidupan yang memuaskan (senang)."
    },
    {
        "ayat": 8,
        "lafal": "\u0648\u064e\u0627\u064e\u0645\u0651\u064e\u0627 \u0645\u064e\u0646\u0652 \u062e\u064e\u0641\u0651\u064e\u062a\u0652 \u0645\u064e\u0648\u064e\u0627\u0632\u0650\u064a\u0652\u0646\u064f\u0647\u0657\u06d9",
        "terjemah": "Dan adapun orang yang ringan timbangan (kebaikan)nya,"
    },
    {
        "ayat": 9,
        "lafal": "\u0641\u064e\u0627\u064f\u0645\u0651\u064f\u0647\u0657 \u0647\u064e\u0627\u0648\u0650\u064a\u064e\u0629\u064c \u00a0\u06d7",
        "terjemah": "maka tempat kembalinya adalah neraka Hawiyah."
    },
    {
        "ayat": 10,
        "lafal": "\u0648\u064e\u0645\u064e\u0627\u0653 \u0627\u064e\u062f\u0652\u0631\u0670\u0649\u0643\u064e \u0645\u064e\u0627 \u0647\u0650\u064a\u064e\u0647\u0652\u06d7",
        "terjemah": "Dan tahukah kamu apakah neraka Hawiyah itu?"
    },
    {
        "ayat": 11,
        "lafal": "\u0646\u064e\u0627\u0631\u064c \u062d\u064e\u0627\u0645\u0650\u064a\u064e\u0629\u064c \u08d6",
        "terjemah": "(Yaitu) api yang sangat panas."
    }
]