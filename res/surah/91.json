[
    {
        "ayat": 1,
        "lafal": "\u0648\u064e\u0627\u0644\u0634\u0651\u064e\u0645\u0652\u0633\u0650 \u0648\u064e\u0636\u064f\u062d\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "Demi matahari dan sinarnya pada pagi hari,"
    },
    {
        "ayat": 2,
        "lafal": "\u0648\u064e\u0627\u0644\u0652\u0642\u064e\u0645\u064e\u0631\u0650 \u0627\u0650\u0630\u064e\u0627 \u062a\u064e\u0644\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "demi bulan apabila mengiringinya,"
    },
    {
        "ayat": 3,
        "lafal": "\u0648\u064e\u0627\u0644\u0646\u0651\u064e\u0647\u064e\u0627\u0631\u0650 \u0627\u0650\u0630\u064e\u0627 \u062c\u064e\u0644\u0651\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "demi siang apabila menampakkannya,"
    },
    {
        "ayat": 4,
        "lafal": "\u0648\u064e\u0627\u0644\u0651\u064e\u064a\u0652\u0644\u0650 \u0627\u0650\u0630\u064e\u0627 \u064a\u064e\u063a\u0652\u0634\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "demi malam apabila menutupinya (gelap gulita),"
    },
    {
        "ayat": 5,
        "lafal": "\u0648\u064e\u0627\u0644\u0633\u0651\u064e\u0645\u064e\u0627\u06e4\u0621\u0650 \u0648\u064e\u0645\u064e\u0627 \u0628\u064e\u0646\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "demi langit serta pembinaannya (yang menakjubkan),"
    },
    {
        "ayat": 6,
        "lafal": "\u0648\u064e\u0627\u0644\u0652\u0627\u064e\u0631\u0652\u0636\u0650 \u0648\u064e\u0645\u064e\u0627 \u0637\u064e\u062d\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "demi bumi serta penghamparannya,"
    },
    {
        "ayat": 7,
        "lafal": "\u0648\u064e\u0646\u064e\u0641\u0652\u0633\u064d \u0648\u0651\u064e\u0645\u064e\u0627 \u0633\u064e\u0648\u0651\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "demi jiwa serta penyempurnaan (ciptaan)nya,"
    },
    {
        "ayat": 8,
        "lafal": "\u0641\u064e\u0627\u064e\u0644\u0652\u0647\u064e\u0645\u064e\u0647\u064e\u0627 \u0641\u064f\u062c\u064f\u0648\u0652\u0631\u064e\u0647\u064e\u0627 \u0648\u064e\u062a\u064e\u0642\u0652\u0648\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "maka Dia mengilhamkan kepadanya (jalan) kejahatan dan ketakwaannya,"
    },
    {
        "ayat": 9,
        "lafal": "\u0642\u064e\u062f\u0652 \u0627\u064e\u0641\u0652\u0644\u064e\u062d\u064e \u0645\u064e\u0646\u0652 \u0632\u064e\u0643\u0651\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "sungguh beruntung orang yang menyucikannya (jiwa itu),"
    },
    {
        "ayat": 10,
        "lafal": "\u0648\u064e\u0642\u064e\u062f\u0652 \u062e\u064e\u0627\u0628\u064e \u0645\u064e\u0646\u0652 \u062f\u064e\u0633\u0651\u0670\u0649\u0647\u064e\u0627\u06d7",
        "terjemah": "dan sungguh rugi orang yang mengotorinya."
    },
    {
        "ayat": 11,
        "lafal": "\u0643\u064e\u0630\u0651\u064e\u0628\u064e\u062a\u0652 \u062b\u064e\u0645\u064f\u0648\u0652\u062f\u064f \u0628\u0650\u0637\u064e\u063a\u0652\u0648\u0670\u0649\u0647\u064e\u0627\u0653  \u06d6",
        "terjemah": "(Kaum) samud telah mendustakan (rasulnya) karena mereka melampaui batas (zalim),"
    },
    {
        "ayat": 12,
        "lafal": "\u0627\u0650\u0630\u0650 \u0627\u0646\u0652\u06e2\u0628\u064e\u0639\u064e\u062b\u064e \u0627\u064e\u0634\u0652\u0642\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "ketika bangkit orang yang paling celaka di antara mereka,"
    },
    {
        "ayat": 13,
        "lafal": "\u0641\u064e\u0642\u064e\u0627\u0644\u064e \u0644\u064e\u0647\u064f\u0645\u0652 \u0631\u064e\u0633\u064f\u0648\u0652\u0644\u064f \u0627\u0644\u0644\u0651\u0670\u0647\u0650 \u0646\u064e\u0627\u0642\u064e\u0629\u064e \u0627\u0644\u0644\u0651\u0670\u0647\u0650 \u0648\u064e\u0633\u064f\u0642\u0652\u064a\u0670\u0647\u064e\u0627\u06d7",
        "terjemah": "lalu Rasul Allah (Saleh) berkata kepada mereka, \u201c(Biarkanlah) unta betina dari Allah ini dengan minumannya.\u201d"
    },
    {
        "ayat": 14,
        "lafal": "\u0641\u064e\u0643\u064e\u0630\u0651\u064e\u0628\u064f\u0648\u0652\u0647\u064f \u0641\u064e\u0639\u064e\u0642\u064e\u0631\u064f\u0648\u0652\u0647\u064e\u0627\u06d6 \u0641\u064e\u062f\u064e\u0645\u0652\u062f\u064e\u0645\u064e \u0639\u064e\u0644\u064e\u064a\u0652\u0647\u0650\u0645\u0652 \u0631\u064e\u0628\u0651\u064f\u0647\u064f\u0645\u0652 \u0628\u0650\u0630\u064e\u0646\u0652\u06e2\u0628\u0650\u0647\u0650\u0645\u0652 \u0641\u064e\u0633\u064e\u0648\u0651\u0670\u0649\u0647\u064e\u0627\u06d6",
        "terjemah": "Namun mereka mendustakannya dan menyembelihnya, karena itu Tuhan membinasakan mereka karena dosanya, lalu diratakan-Nya (dengan tanah),"
    },
    {
        "ayat": 15,
        "lafal": "\u0648\u064e\u0644\u064e\u0627 \u064a\u064e\u062e\u064e\u0627\u0641\u064f \u0639\u064f\u0642\u0652\u0628\u0670\u0647\u064e\u0627 \u08d6",
        "terjemah": "dan Dia tidak takut terhadap akibatnya."
    }
]